---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

// دیتای سئو برای گوگل
const seoData = {
  name: "آراد رضایی",
  jobTitle: "توسعه‌دهنده و بنیان‌گذار شاتور",
  description: "درباره آراد رضایی، خالق پلتفرم هوشمند محاسبات طلا (شاتور) و راه‌های ارتباطی مستقیم در تلگرام.",
  telegram: "arad_rezaei"
};
---

<Layout title="درباره ما و تماس | آراد رضایی">
  <link rel="canonical" href="https://shatoor.ir/contact" />
  <meta name="description" content={seoData.description} />
  
  <Navbar currentPage="contact" />
  
  <main class="relative min-h-screen pt-32 pb-20 overflow-hidden bg-white dark:bg-gray-950">
    <div class="absolute inset-0 z-0">
      <div class="absolute inset-0 bg-[linear-gradient(to_right,#80808008_1px,transparent_1px),linear-gradient(to_bottom,#80808008_1px,transparent_1px)] bg-[size:40px_40px]"></div>
      <div class="absolute top-1/4 left-1/2 -translate-x-1/2 w-[600px] h-[600px] bg-gold-500/5 blur-[120px] rounded-full pointer-events-none"></div>
    </div>

    <div class="container mx-auto px-4 relative z-10 max-w-4xl">
      
      <section class="text-center mb-16 animate-fade-in-up">
        <div class="inline-block p-1 rounded-full bg-gradient-to-tr from-gold-500 to-amber-200 mb-6 shadow-2xl">
          <div class="w-32 h-32 rounded-full bg-gray-900 flex items-center justify-center text-4xl font-black text-gold-500">
            AR
          </div>
        </div>
        <h1 class="text-4xl mt-10 md:text-6xl font-black text-gray-900 dark:text-white mb-4 tracking-tighter">
          آراد رضایی
        </h1>
        <p class="text-gold-600 dark:text-gold-400 font-bold tracking-[0.3em] uppercase text-sm">
          Founder & Lead Developer
        </p>
      </section>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center mb-24">
        <div class="space-y-6 animate-fade-in-up delay-100">
          <h2 class="text-2xl font-black text-gray-900 dark:text-white border-r-4 border-gold-500 pr-4">
            داستان شاتور
          </h2>
          <p class="text-gray-600 dark:text-gray-400 leading-loose text-justify font-medium">
            شاتور نتیجه یک ایده برای شفاف‌سازی در بازار پیچیده طلا است. من، <strong>آراد رضایی</strong>، با هدف ایجاد ابزاری دقیق و در عین حال ساده برای کاربران عادی و حرفه‌ای، این پلتفرم را توسعه دادم. اعتقاد دارم که دسترسی به محاسبات دقیق حق هر سرمایه‌گذاری است.
          </p>

        </div>

        <div class="relative group animate-fade-in-up delay-200">
          <div class="absolute -inset-1 bg-gradient-to-r from-gold-500 to-amber-500 rounded-[2.5rem] blur opacity-25 group-hover:opacity-50 transition duration-1000"></div>
          <div class="relative bg-white dark:bg-gray-900 rounded-[2.5rem] p-10 border border-gray-100 dark:border-gray-800 shadow-2xl overflow-hidden">
            <h3 class="text-xl font-black text-gray-900 dark:text-white mb-8 text-center">ارتباط مستقیم با من</h3>
            
            <a href={`https://t.me/${seoData.telegram}`} target="_blank" class="flex flex-col items-center group/btn">
              <div class="w-20 h-20 bg-blue-500/10 rounded-3xl flex items-center justify-center mb-4 transition-transform group-hover/btn:scale-110 duration-500">
                <svg class="w-10 h-10 text-blue-500" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm4.64 6.8c-.15 1.58-.8 5.42-1.13 7.19-.14.75-.42 1-.68 1.03-.58.05-1.02-.38-1.58-.75-.88-.58-1.38-.94-2.23-1.5-.99-.65-.35-1.01.22-1.59.15-.15 2.71-2.48 2.76-2.69a.2.2 0 00-.05-.18c-.06-.05-.14-.03-.21-.02-.09.02-1.49.95-4.22 2.79-.4.27-.76.41-1.08.4-.36-.01-1.04-.2-1.55-.37-.63-.2-1.12-.31-1.08-.66.02-.18.27-.36.74-.55 2.92-1.27 4.86-2.11 5.83-2.51 2.78-1.16 3.35-1.36 3.73-1.36.08 0 .27.02.39.12.1.08.13.19.14.27-.01.06.01.24 0 .38z"/>
                </svg>
              </div>
              <span class="text-lg font-bold text-gray-900 dark:text-white mb-1">تلگرام</span>
              <span class="text-blue-500 font-mono tracking-wider">@arad_rezaei</span>
            </a>

            <div class="mt-10 pt-8 border-t border-gray-100 dark:border-gray-800 text-center">
                <p class="text-xs text-gray-400 font-medium">پاسخگویی سریع برای همکاری‌ها و پیشنهادات</p>
            </div>
          </div>
        </div>
      </div>

    </div>
  </main>

  <Footer />
</Layout>

<style>
  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(40px); }
    to { opacity: 1; transform: translateY(0); }
  }
  .animate-fade-in-up {
    animation: fadeInUp 1s cubic-bezier(0.22, 1, 0.36, 1) forwards;
  }
  .delay-100 { animation-delay: 0.2s; }
  .delay-200 { animation-delay: 0.4s; }
</style>